{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "damou/library-auth-service",
    "type": "project",
    "description": "図書館管理システムの認証を担当するAPI。ユーザー認証・認可・アカウント管理を提供する。",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "composer": "^2.0",
        "firebase/php-jwt": "^6.11",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "mateusjunges/laravel-kafka": "^2.9.0",
        "mongodb/laravel-mongodb": "^5.5",
        "open-telemetry/exporter-otlp": "^1.0",
        "open-telemetry/sdk": "^1.10",
        "predis/predis": "^3.3",
        "ramsey/uuid": "^4.9",
        "spatie/laravel-prometheus": "^1.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test --coverage-clover storage/logs/clover.xml",
            "@php scripts/check-coverage.php"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "tbachert/spi": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
